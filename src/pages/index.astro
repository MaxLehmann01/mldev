<script>
	// Theme toggle persistence
	(function(){
		const btn = document.getElementById('theme-toggle');
		if (!btn) return;
		const getTheme = (): string => document.body.getAttribute('data-theme') || 'dark';
		const setTheme = (t: string) => { document.body.setAttribute('data-theme', t); try { localStorage.setItem('theme', t); } catch {} };
		btn.addEventListener('click', () => {
			const next = getTheme() === 'dark' ? 'light' : 'dark';
			setTheme(next);
		});
	})();
</script>

<style>
	.uc-wrapper { min-height: 100dvh; display: grid; place-items: center; padding: 24px; position: relative; overflow: hidden; }
	.bg-grid {
		position: absolute; inset: -20% -20% 0 -20%; background:
			radial-gradient(600px 300px at 0% 0%, rgba(56,189,248,0.20), transparent 60%),
			radial-gradient(500px 300px at 100% 0%, rgba(14,165,233,0.18), transparent 60%),
			radial-gradient(700px 400px at 50% 100%, rgba(99,102,241,0.18), transparent 60%),
			linear-gradient(180deg, rgba(255,255,255,0.06), rgba(255,255,255,0.0));
		mask: radial-gradient(1200px 600px at 50% 40%, black 60%, transparent 100%);
		filter: blur(10px) saturate(120%);
		pointer-events: none;
	}
	.card { position: relative; width: 100%; max-width: 720px; background: color-mix(in oklab, var(--card) 86%, black 14%);
		border: 1px solid rgba(148,163,184,0.18); border-radius: 20px; padding: clamp(20px, 5vw, 36px);
		box-shadow: 0 10px 40px rgba(2,8,23,0.6), inset 0 1px 0 rgba(255,255,255,0.05);
		backdrop-filter: blur(8px) saturate(120%);
	}
	.brand { display: grid; grid-template-columns: 56px 1fr auto; gap: 16px; align-items: center; margin-bottom: 16px; }
	.logo { display: grid; place-items: center; width: 56px; height: 56px; border-radius: 14px; background: linear-gradient(135deg, #38bdf8, #6366f1); box-shadow: inset 0 1px 0 rgba(255,255,255,0.3); font-size: 28px; }
	.titles h1 { margin: 0; font-size: clamp(28px, 5vw, 40px); letter-spacing: -.02em; }
	.titles p { margin: 6px 0 0; color: var(--muted); }
	.theme-toggle { height: 36px; display: inline-flex; align-items: center; gap: 8px; padding: 0 12px; border: 1px solid rgba(148,163,184,0.18); border-radius: 999px; background: rgba(2,6,23,0.6); color: var(--text); cursor: pointer; }
	body[data-theme="light"] .theme-toggle { background: #ffffff; border-color: rgba(2,8,23,0.08); }
	.theme-toggle:hover { border-color: rgba(56,189,248,0.6); }
	.theme-toggle .icon { display: block; }
	.theme-toggle .label { display: none; }
	@media (min-width: 560px) { .theme-toggle .label { display: inline; } }

	.content { display: grid; gap: 10px; }
	.content p { margin: 0; }
	.muted { color: var(--muted); }

	.links { display: flex; gap: 14px; flex-wrap: wrap; }
	.links a {
		display: inline-flex; align-items: center; gap: 8px;
		padding: 8px 12px; border-radius: 999px;
		background: var(--chip-bg);
		border: 1px solid var(--chip-border);
		color: var(--text);
		transition: background-color .15s ease, border-color .15s ease;
	}
	.links a:hover { border-color: var(--chip-border-hover); background: var(--chip-bg-hover); }
	.links a:focus { outline: none; box-shadow: 0 0 0 3px color-mix(in sRGB, var(--primary) 30%, transparent); }
	.links a svg { flex: 0 0 auto; }

	.foot { margin-top: 20px; color: var(--muted); font-size: 12px; text-align: center; }

	.divider {
		border: 0; height: 1px;
		background: var(--chip-border);
		margin: 4px 0 10px;
	}

	@media (max-width: 560px) {
		.brand { grid-template-columns: 48px 1fr auto; }
		.logo { width: 48px; height: 48px; font-size: 24px; }
		.uc-wrapper { padding: 16px; }
		.card { width: calc(100% - 32px); margin-inline: 16px; }
	}
</style>

