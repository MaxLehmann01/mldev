---
interface Props {
  title?: string;
  description?: string;
}
const {
  title = 'Under Construction',
  description = 'This site is under construction. Please check back soon.'
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="theme-color" content="#0ea5e9" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
		<script>
			// Set theme early from localStorage (no prefers-color-scheme)
			(function(){
				try {
					const saved = localStorage.getItem('theme');
					const theme = saved === 'light' ? 'light' : 'dark';
					document.addEventListener('DOMContentLoaded', function(){
						document.body.setAttribute('data-theme', theme);
					});
				} catch {}
			})();
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	:root {
		--bg: #0b1020;
		--text: #e5e7eb;
		--muted: #94a3b8;
		--card: #0f172a;
		--primary: #38bdf8; /* sky-400 */
		--primary-600: #0284c7;
		--chip-bg: rgba(2,6,23,0.6);
		--chip-bg-hover: rgba(2,6,23,0.7);
		--chip-border: rgba(148,163,184,0.18);
		--chip-border-hover: rgba(56,189,248,0.6);
	}
	/* Light theme overrides via explicit data-theme only */
	body[data-theme="light"] {
		--bg: #f6f7fb;
		--text: #0b1020;
		--muted: #4b5563;
		--card: #ffffff;
		--primary: #0ea5e9;
		--primary-600: #0284c7;
		/* Much darker chip background for clear contrast on white */
		--chip-bg: #e2e8f0; /* slate-200 */
		--chip-bg-hover: #cbd5e1; /* slate-300 */
		--chip-border: rgba(2,8,23,0.12);
		--chip-border-hover: rgba(14,165,233,0.45);
	}
	* { box-sizing: border-box; }
	html, body { height: 100%; }
	html, body { margin: 0; }
	body {
		font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
		color: var(--text);
		background: var(--bg);
		min-height: 100%;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
	a { color: var(--primary); text-decoration: none; }
	a:hover { color: var(--primary-600); }
</style>
